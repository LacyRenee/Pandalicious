@{
    ViewData["Title"] = "Sides";
}

<div class="recipesPage">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <h3 class="mb-30">List of All Sides</h3>
                <div class="col-md-9">
                    <a asp-controller="Recipe" asp-action="NewRecipe" class="genric-btn info-border small circle">Add Recipe</a>
                </div> <br />
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <table id="SideTable" class="table-bordered table-striped">
                            <thead>
                                <tr class="table-row">
                                    <th>Recipe Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-row">
                                    <td><a class="ListOfRecipes" data-recipeID="r.RecipeId">r.RecipeName</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-9" id="DisplaySideRecipe">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="/js/Recipe.js"></script>

    <script type="text/javascript" charset="utf8">$(document).ready(function () {
            $('#SideTable').DataTable({
                "order": [0, 'asc'],
                "columnDefs": [
                    { "orderable": false }
                ],
                scrollY: 400
            });
        });</script>
}