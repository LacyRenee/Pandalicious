@model Pandalicious.Models.Recipe;

@{
    ViewData["Title"] = "New Recipe";
}    <!--================ Reservation Area =================-->
<section class="reservation-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-6">
                <form class="booking-form" id="myForm" action="">
                    <div class="form-group">
                        <div class="row">
                            <div class="section-title relative">
                                <h2>Recipe Details</h2>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-1 col-md-1 col-sm-1" style="font-weight:bold;">Recipe Name:</label>
                            <input name="event-name" placeholder="Enter Recipe Name" class="col-lg-9 col-md-9 col-sm-9 form-control" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-1 col-md-1" style="font-weight:bold;">Servings:</label>
                            <input class="col-lg-1 col-md-1" type="number" min="0" /> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                            <label class="col-lg-1 col-md-1" style="font-weight:bold;">Duration: </label>
                            <input class="col-lg-2 col-md-2" placeholder="Enter recipe time" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-1 col-md-1 col-sm-1" style="font-weight:bold;">Ingredients:</label>
                        </div>
                        <div class="row">
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                            <input class="col-lg-3 col-md-3 col-sm-3" placeholder="Find ingredient" type="text" /> &nbsp;
                            <button id="ButtonId0" class="genric-btn success-border radius AddIngredient">Add</button>
                        </div>
                        <div id="template"></div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-1 col-md-1 col-sm-1" style="font-weight:bold;">Directions:</label>
                        </div>
                        <div class="row">
                            <label class="col-lg-1 col-md-1 col-sm-1">Step 1:</label>
                            <input class="col-lg-2 col-md-2 col-sm-2" placeholder="Input directions" type="text" />
                            <button class="col-lg-1 col-md-1 col-sm-1">Add</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <button>Cancel</button>
                            <button>Finish</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>

@section scripts{
    <script type="text/javascript" src="/js/Recipe.js"></script>
    <script type="text/javascript" src="/js/handlebars.js"></script>
    <script id="handlebars-demo" type="text/x-handlebars-template">
        <div id="{{divID}}" class="row">
            <div class="col-lg-1 col-md-1 col-sm-1"></div>
            <input class="col-lg-3 col-md-3 col-sm-3" placeholder="Find ingredient" type="text" /> &nbsp;
            <button id="{{buttonID}}" class="genric-btn success-border radius AddIngredient">Add</button>
        </div>
    </script>
}