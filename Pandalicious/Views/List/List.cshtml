@model Pandalicious.Models.Recipe;

@{
    ViewData["Title"] = "My Lists";
}

<div class="">
    <div class="row height ml-5">
        <h3 class="mb-10 center">List of All Notes</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 ">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 DataTableForAllRecipes">
                    <a  class="genric-btn primary-border small circle">Add Note</a>

                    <table id="AllNoteTable" class="table-bordered table-striped">
                        <thead>
                            <tr class="table-row">
                                <th>Recipe Name</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr class="table-row">
                                    <td><a class="ListOfRecipes">Example Note</a></td>
                                </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-9" id="DisplaySideRecipe">

                </div>
            </div>

        </div>
    </div>
</div>


@section scripts
    {
    <script type="text/javascript" src="/js/Recipe.js"></script>


    <script type="text/javascript" charset="utf8">$(document).ready(function () {
            $('#AllNoteTable').DataTable({
                "order": [0, 'asc'],
                "columnDefs": [
                    { "orderable": false }
                ],
                scrollY: 400
            });
        });</script>
}